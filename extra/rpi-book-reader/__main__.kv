<RPIBookReader>:
    do_default_tab: False
    TabbedPanelItem:
        text: "Player"
        BoxLayout:
            orientation: "vertical"
            AnchorLayout:
                anchor_y: "top"
                BoxLayout:
                    Label:
                        id: playback_current
                        text: "00:00:00"
                    ProgressBar:
                        id: audio_progress_bar
                        value: .55
                        min: 0
                        max: 1
                        size_hint_x: .9
                    Label:
                        id: playback_left
                        text: '01:20:00'
            AnchorLayout:
                anchor_x: "center"
                anchor_y: "center"
                ToggleButtonImage:
                    state: "normal"
                    source: "./icons/play-button.png"
                    size_hint: .9, .9
                    on_press: self.toggle_state(self, self.state)
            BoxLayout:
                ImageButton:
                    size_hint: .5, .5
                    source: "./icons/fast-backward.png"
                ImageButton:
                    size_hint: .5, .5
                    source: "./icons/step-backward.png"
                ImageButton:
                    size_hint: .5, .5
                    source: "./icons/step-forward.png"
                ImageButton:
                    size_hint: .5, .5
                    source: "./icons/fast-forward.png"
    TabbedPanelItem:
        text: "Camera"
        AnchorLayout:
            anchor_x: "center"
            anchor_y: "center"
            Camera:
                play: True
